@model IEnumerable<MakeEvent.Web.Models.Admin.PageMvcViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-block">
    <div class="col-md-offset-1 col-md- col-md-10">
        <table class="table highlight">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TitleEn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TitleRu)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TitleEn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TitleRu)
                    </td>
                    <td>
                        <button class="btn  blue darken-3 btn-sm btn-default">
                            @Html.ActionLink(Localization.BtnEditText, "Edit", new { id = item.Id }) <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                        <button class="btn deep-purple lighten-1  btn-sm btn-default">
                            @Html.ActionLink(Localization.BtnDetailsText, "Details", new { id = item.Id }) <span class="glyphicon glyphicon-list"></span>
                        </button>

                    </td>
                </tr>
            }
        </table>
    </div>
</div>


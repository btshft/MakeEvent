@model MakeEvent.Web.Models.Admin.EventCategoryMvcViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-block">
    <div class="col-md-offset-1">
        <h5>Are you sure you want to delete this?</h5>
        <table class="table highlight">
            <tr>
                <td>
                    <label> @Html.DisplayNameFor(model => model.NameRu)</label>
                </td>
                <td>
                    @Html.DisplayFor(model => model.NameRu)
                </td>
            </tr>
            <tr>
                <td><label>@Html.DisplayNameFor(model => model.NameEn)</label></td>
                <td>@Html.DisplayFor(model => model.NameEn)</td>
            </tr>
        </table>
        <div class="form-group">
            @using (Html.BeginForm())
            {
                <button class="btn deep-purple lighten-1  btn-sm btn-default">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    @Html.ActionLink("Back", "Index")
                </button>
                <button type="submit" class="btn indigo darken-1 btn-sm btn-default">
                    Delete
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            }
        </div>
    </div>
</div>


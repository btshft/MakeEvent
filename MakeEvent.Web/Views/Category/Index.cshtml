@model IEnumerable<MakeEvent.Web.Models.Admin.EventCategoryMvcViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-block">
    <p class="col-md-offset-1">
        <button class="btn indigo darken-1 btn-sm btn-default">
            @Html.ActionLink(Localization.BtnCreateText, "Create")<span class="glyphicon glyphicon-plus"></span>
        </button>
    </p>
    <div class="col-md-offset-1 col-md- col-md-10">
        <table class="table highlight">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameRu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NameEn)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameRu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameEn)
                    </td>
                    <td>
                        <button class="btn  blue darken-3 btn-sm btn-default">
                            @Html.ActionLink(Localization.BtnEditText, "Edit", new { id = item.Id }) <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                        <button class="btn deep-purple lighten-1  btn-sm btn-default">
                            @Html.ActionLink(Localization.BtnDetailsText, "Details", new { id = item.Id }) <span class="glyphicon glyphicon-list"></span>
                        </button>
                        <button class="btn pink lighten-1 btn-sm btn-default">
                            @Html.ActionLink(Localization.BtnDeleteText, "Delete", new { id = item.Id }) <span class="glyphicon glyphicon-remove"></span>
                        </button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
@model IEnumerable<MakeEvent.Web.Models.Organization.SoldTicketMvcViewModel>
@{
    Layout = "~/Views/Shared/_OrgLayout.cshtml";
}
<div class="main-page">
    <table class="table striped hoverable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OwnerFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventTitle)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventTitle)
                </td>
                <td>
                    <button class="btn deep-purple lighten-1  btn-sm btn-default">
                        @Html.ActionLink(Localization.BtnDetailsText, "SoldDetails", new { id = item.Id }) <span class="glyphicon glyphicon-list"></span>
                    </button>
                </td>
            </tr>
        }

    </table>

</div>
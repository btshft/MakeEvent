@model IEnumerable<MakeEvent.Web.Models.Organization.BookedServiceMvcViewModel>
@{
    Layout = "~/Views/Shared/_OrgLayout.cshtml";
}
<div class="main-page">
    <div class="col-md-offset-1">
        <table class="table highlight">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerFio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.CustomerFio)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.ServiceName)
                    </td>
                    <td>
                        <button class="btn deep-purple lighten-1  btn-sm btn-default">
                            @Html.ActionLink(Localization.BtnDetailsText, "BookedDetails", new { id = item.Id }) <span class="glyphicon glyphicon-list"></span>
                        </button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
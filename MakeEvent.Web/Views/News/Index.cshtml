@model IEnumerable<MakeEvent.Web.Models.Admin.NewsMvcViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TitleRu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescriptionRu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentRu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescriptionEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentEn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TitleRu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDescriptionRu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentRu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitleEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDescriptionEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentEn)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@model IEnumerable<MakeEvent.Web.Models.Organization.ServiceMvcViewModel>
<div class="main-page">
    <div class="row">
        @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card hoverable">
                        <div class="card-content">
                            <p>@Html.DisplayFor(model => item.Name)</p>
                            <p>
                                @Html.DisplayFor(model => item.Description)
                            </p>
                            <p>
                                @Html.DisplayFor(model => item.Price)
                            </p>
                        </div>
                        <div class="card-action">
                            <button class="btn deep-purple lighten-1  btn-sm btn-default">
                                @Html.ActionLink(Localization.BtnMakeOrder, "Service", "Home", new { id = item.Id }, null) <span class="glyphicon glyphicon-list"></span>
                            </button>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var urlParts = window.location.pathname.split('/');
        var id = urlParts[urlParts.length - 1];
        $('.nav-pills li').find('.active').removeClass('active');
        $('.nav-pills li').each(function () {
            if ($(this).data('id') == id) {
                $(this).addClass('active');
            }
        });
    });
</script>




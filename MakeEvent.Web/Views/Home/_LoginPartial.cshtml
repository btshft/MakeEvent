@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Organization", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        <ul class="nav navbar-nav">
            <li>
                @Html.ActionLink(Localization.HeaderUserGreeting + User.Identity.GetUserName() + "!", "Index", "Organization", new { id = User.Identity.GetUserId() }, null)
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Localization.HeaderLogoff</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Localization.LinkRegister, "Register", "Organization", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Localization.LinkSingin, "Login", "Organization", routeValues: null, htmlAttributes: new {id = "loginLink"})</li>
    </ul>
}

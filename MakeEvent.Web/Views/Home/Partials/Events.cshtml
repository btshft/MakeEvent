<script id="eventfull-item" type="text/x-kendo-template">
        # for(var i=0; i < data.length; i++){#
        <div class="eventfull-item row">
            <div class="event-image col-md-2 col-md-offset-2">
                <img src="#: data[i].ImageUrl#" />
            </div>
            <div class="event-info col-md-6">
                <div class="form-inline">
                    <h4><a class="event-header" data-id="#: data[i].Id#">#: data[i].Title# </a></h4>
                </div>
                <div class="form-inline">
                    <label class="col-md-4">Организатор: </label>
                    <p>#:data[i].OrgName#</p>
                </div>
                <div class="form-inline">
                    <label class="col-md-4">Адрес: </label>
                    <p>#:data[i].Adress#</p>
                </div>
                <div class="form-inline">
                    <label class="col-md-4">Дата: </label>
                    <p>#:data[i].Date#</p>
                </div>
                <div class="form-inline">
                    <p>#:data[i].Description#</p>
                </div>
                <div class="form-group">
                    <button class="btn btn-default">Смотреть подробности и записаться</button>
                </div>
            </div>
        </div>
        #}#


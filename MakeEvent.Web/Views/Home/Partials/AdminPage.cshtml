<script id="adminTemplate" type="text/x-kendo-template">
    <nav class="navbar navbar-default classic-nav">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#index">Главная</a></li>
                    <li><a href="#organizations">Организации</a></li>
                    <li><a href="#events">Мероприятия</a></li>
                    <li><a href="#news">Новости</a></li>
                    <li data-bind="visible: isGuest"><a data-bind="click: openEnterWidow">Вход</a></li>
                    <li><a data-bind="click: goToPersonal, text: user.Login, visible: isAutorized"></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="page adminpage">
        <div class="tabs">
            <span data-tab="category" data-bind="click: changeTab, css: {active-tab: isCategoriesActive}">Категории</span>
            <span data-tab="news" data-bind="click: changeTab, css: {active-tab: isNewsActive}">Новости</span>
            <span data-tab="pages" data-bind="click: changeTab, css: {active-tab: isPagesActive}">Страницы</span>
        </div>
        <div class="tab-item col-md-12" data-bind="visible: isCategoriesActive">
            <div class="form-group">
                <button class="btn btn-default" data-bind="click: addCategory">Добавить</button>
            </div>
            <div class="form-group">
                <table class="table table-striped">
                    <tr>
                        <th>Название</th>
                        <th>Действие</th>
                    </tr>
                    <tbody data-template="category-row" data-bind="source: categories"></tbody>
                </table>
            </div>
        </div>
        <div class="tab-item col-md-12" data-bind="visible: isNewsActive">
            <div class="form-group">
                <button class="btn btn-default" data-bind="click: addNews">Добавить</button>
            </div>
            <div class="form-group">
                <table class="table table-striped">
                    <tr>
                        <th>Название</th>
                        <th>Короткое описание</th>
                        <th>Описание</th>
                        <th>Дата</th>
                        <th>Действие</th>
                    </tr>
                    <tbody data-template="news-row" data-bind="source: news"></tbody>
                </table>
            </div>
        </div>
        <div class="tab-item col-md-12" data-bind="visible: isPagesActive">
            <div class="tabs sub-tabs">
                <span data-tab="about" data-bind="click: changeSubTab, css: {active-tab: isAboutPageActive}">О нас</span>
                <span data-tab="help" data-bind="click: changeSubTab, css: {active-tab: isHelpPageActive}">Помощь</span>
            </div>
            <div class="tab-item" data-bind="visible: isAboutPageActive">
                <div class="form-group manageBlock">
                    <input class="langChange" data-bind="value: currentLang, events:{change: changeLang}" />
                    <span>Режим редактирования</span>
                    <input class="mode-switch" data-bind="checked: isEdit, events:{change: changeEditMode}"/>
                </div>
                <div data-template="page-template" data-bind="source: aboutPage"></div>
            </div>
            <div class="tab-item" data-bind="visible: isHelpPageActive">
                <div class="form-group manageBlock">
                    <input class="langChange" data-bind="value: currentLang, events:{change: changeLang}" />
                    <span>Режим редактирования</span>
                    <input class="mode-switch" data-bind="checked: isEdit, events:{change: changeEditMode}" />
                </div>
                <div data-template="page-template" data-bind="source: helpPage"></div>
            </div>
        </div>
    </div>
    <div id="categoryManageWndw">
        <div class="form-group">
            <input data-bind="value: singleCategory.LangId" class="langChange" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Название" data-bind="value: singleCategory.Name" />
        </div>
        <div class="form-group">
            <button class="btn btn-default" data-bind="click: saveCategory">Сохранить</button>
            <button class="btn" data-bind="click: cancelCat">Отмена</button>
        </div>
    </div>
    <div id="newsManageWndw">
        <div class="form-group">
            <input data-bind="value: singleNews.LangId" class="langChange" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Заголовок" data-bind="value: singleNews.Title" />
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Короткое описание" data-bind="value: singleNews.ShortDescription"></textarea>
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Описание" data-bind="value: singleNews.Description"></textarea>
        </div>
        <div class="form-group">
            <input type="file" class="form-control" />
        </div>
        <div class="form-group">
            <button class="btn btn-default" data-bind="click: saveNews">Сохранить</button>
            <button class="btn" data-bind="click: cancelNews">Отмена</button>
        </div>
    </div>
    <footer class="footer pageFooter">
        <div class="container-fluid">
            <div class="col-md-offset-2 col-md-2">
                <h5>О нас</h5>
                <a class="block" href="">Связаться</a>
                <a class="block" href="">Новости</a>
            </div>

            <div class="col-md-2">
                <h5>События</h5>
                <a class="block" href="">Организации</a>
                <a class="block" href="">Мероприятия</a>
            </div>

            <div>
                <h5>Мы в соцсетях</h5>
                <a class="btn btn-social-icon btn-google">
                    <span class="fa fa-google"></span>
                </a>
                <a class="btn btn-social-icon btn-facebook"><span class="fa fa-facebook"></span></a>
                <a class="btn btn-social-icon btn-instagram"><span class="fa fa-instagram"></span></a>
                <a class="btn btn-social-icon btn-linkedin"><span class="fa fa-linkedin"></span></a>
                <a class="btn btn-social-icon btn-twitter"><span class="fa fa-twitter"></span></a>
                <a class="btn btn-social-icon btn-vk"><span class="fa fa-vk"></span></a>
            </div>
        </div>
    </footer>
    <script id="category-row" type="text/x-kendo-template">
        <tr>
            <td data-bind="text: Name"></td>
            <td data-bind="attr:{id: Id, data-lang: LangId}">
                <button class="btn-xs btn-success">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button class="btn-xs btn-danger">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true">
                    </span>
                </button>
            </td>
        </tr>
    </script>
    <script id="news-row" type="text/x-kendo-template">
        <tr>
            <td data-bind="text: Title"></td>
            <td data-bind="text: Description"></td>
            <td data-bind="text: ShortDescription"></td>
            <td data-bind="text: Date"></td>
            <td data-bind="attr:{id: Id, data-lang: LangId}">
                <button class="btn-xs btn-success">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button class="btn-xs btn-danger">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true">
                    </span>
                </button>
            </td>
        </tr>
    </script>
    <script id="page-template" type="text/kendo-x-template">
        <div data-bind="attr:{data-id: LangId}" class="lang-page" style="display: none;">
            <div class="clear-styles pageHtml" data-bind="html: Content"></div>
            <div class="form-group pageEditorBlock">
                <textarea class="pageEditor" data-bind="value: Content"></textarea>
                <button class="btn btn-default pageEditor">Сохранить</button>
            </div>
        </div>
    </script>
</script>



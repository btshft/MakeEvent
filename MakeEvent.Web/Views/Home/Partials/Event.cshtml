<script id="eventItemTemplate" type="text/x-kendo-template">
    <nav class="navbar navbar-default classic-nav">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#index">Главная</a></li>
                    <li><a href="#organizations">Организации</a></li>
                    <li><a href="#events">Мероприятия</a></li>
                    <li><a href="#news">Новости</a></li>
                    <li data-bind="visible: isGuest"><a data-bind="click: openEnterWidow">Вход</a></li>
                    <li><a data-bind="click: goToPersonal, text: user.Login, visible: isAutorized"></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="pageContent">
        <div class="row event-row">
            <div class="col-md-7">
                <div class="singleEvent">
                    <div class="event-header">
                        <span data-bind="text: event.Title"></span>
                    </div>
                    <div class="event-content">
                        <span data-bind="text: event.Description"></span>
                    </div>
                    <div class="tickets-block">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Тип билета</th>
                                    <th>Цена</th>
                                    <th>Выбрать</th>
                                </tr>
                            </thead>
                            <tbody data-template="ticket-item" data-bind="source: event.Tickets"></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-5 event-details">
                <div class="event-image">
                    <img data-bind="attr:{src: event.ImgUrl}" />
                </div>
                <div class="event-title">
                    <span data-bind="text: event.Title"></span>
                </div>
                <div class="event-date">
                    <span data-bind="text: event.Date"></span>
                </div>
                    <div class="event-map">
                        <span data-bind="text: event.Adress"></span>
                        <a data-bind="attr:{href: event.MapImgHref}" target="_blank">
                            <img data-bind="attr:{src: event.MapImgSrc}" alt="" style="border: 0;" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <footer class="footer pageFooter">
        <div class="container-fluid">
            <div class="col-md-offset-2 col-md-2">
                <h5>О нас</h5>
                <a class="block" href="">Связаться</a>
                <a class="block" href="">Новости</a>
            </div>

            <div class="col-md-2">
                <h5>События</h5>
                <a class="block" href="">Организации</a>
                <a class="block" href="">Мероприятия</a>
            </div>

            <div>
                <h5>Мы в соцсетях</h5>
                <a class="btn btn-social-icon btn-google">
                    <span class="fa fa-google"></span>
                </a>
                <a class="btn btn-social-icon btn-facebook"><span class="fa fa-facebook"></span></a>
                <a class="btn btn-social-icon btn-instagram"><span class="fa fa-instagram"></span></a>
                <a class="btn btn-social-icon btn-linkedin"><span class="fa fa-linkedin"></span></a>
                <a class="btn btn-social-icon btn-twitter"><span class="fa fa-twitter"></span></a>
                <a class="btn btn-social-icon btn-vk"><span class="fa fa-vk"></span></a>
            </div>
        </div>
    </footer>
    <div id="buyWindow">
        <div>
            <div class="form-group">
                <label data-bind="text: ticketModel.Type"></label>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="fio" id="fio" placeholder="ФИО" data-bind="value: ticketModel.FIO" required />
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="email" id="email" placeholder="Email" data-bind="value: ticketModel.Email" required />
            </div>
            <div class="form-group">
                <input type="number" class="form-control" min="1" name="number" id="ticketCount" placeholder="Количество" data-bind="value: ticketModel.Amount" required />
            </div>
            <div class="form-group">
                <button class="btn k-primary" data-bind="click: buyTickets">Купить</button>
                <button class="btn" data-bind="click: cancel">Отмена</button>
            </div>
        </div>
    </div>
    <script id="ticket-item" type="text/x-kendo-template">
            <tr data-id="#: Id#" data-type="#: Type#" data-price="#: Price #">
                <td data-bind="text: Type"></td>
                <td data-bind="text: Price"></td>
                <td><button class="btn btn-default choiceAction">Выбрать</button></td>
            </tr>
    </script>
</script>




                                  

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Organization", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
          <ul class="nav navbar-nav navbar-right">
         <li>
             @Html.RouteLink("Hello " + User.Identity.GetUserName() + "!", new { action = "Index", controller = "Organization", orgId = User.Identity.GetUserId() })
         </li>
         <li><a href = "javascript:document.getElementById('logoutForm').submit()" > Log off</a></li>
     </ul>
     }
 }
 else
 {
     <ul class="nav navbar-nav navbar-right">
         <li>@Html.ActionLink("Register", "Register", "Organization", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
         <li>@Html.ActionLink("Log in", "Login", "Organization", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
     </ul>
 }
